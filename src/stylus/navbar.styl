.navbar
    background blackA(0.16)
    height navbar-height
    padding 0 navbar-padding-lr
    @media screen and (max-width: 1280px)
        padding 0 (navbar-padding-lr / 2)
    .logo
        transition all 0.4s ease
        background url('../images/logo.png') no-repeat center center
        width 288px
        height navbar-height
        @media screen and (max-width: 1160px)
            width 188px
            background-size 188px
    li a
        color main-white
        height navbar-height
        min-width 140px
        text-align center
        font nav-font
        padding 0 nav-link-padding-lr
        transition all 0.4s ease
        box-sizing border-box
        &:active, &:focus
            color main-white
            background none
        i
            margin-left 16px
        @media screen and (max-width: 1160px)
            font-size nav-font-size * 0.8
            min-width 80px
            padding 0 nav-link-padding-lr * 0.6
        @media screen and (max-width: 800px)
            padding 0 nav-link-padding-lr * 0.4
    li:hover a, li.uk-open a
        color main-white
        background blackA(0.12)
    .sub-nav-container
        background none
    ul.sub-nav li a
        color main-white
        background blackA(0.38)
        height sub-nav-height
        width sub-nav-width
        line-height sub-nav-height
        &:hover
            color main-white
            background blackA(0.7)
            padding-right 60px

.navbar
    background blackA(0.16)
    height navbar-height
    padding 0 navbar-padding-lr
    @media screen and (max-width: 1280px)
        padding 0 (navbar-padding-lr / 2)
    .logo
        transition all 0.4s ease
        background url('../images/logo.png') no-repeat center center
        width 288px
        height navbar-height
        @media screen and (max-width: 1280px)
            width 188px
            background-size 188px
    li a
        color main-white
        height navbar-height
        min-width 140px
        text-align center
        font nav-font
        padding nav-link-padding
        transition all 0.4s ease
        &:active, &:focus
            color main-white
            background none
        @media screen and (max-width: 1280px)
            font-size nav-font-size*0.8
            min-width 80px
    li:hover a, li.uk-open a
        color main-white
        background blackA(0.12)
    .sub-nav-container
        background none
    ul.sub-nav li a
        color main-white
        background blackA(0.38)
        height sub-nav-height
        line-height sub-nav-height
        &:hover
            color main-white
            background blackA(0.7)
